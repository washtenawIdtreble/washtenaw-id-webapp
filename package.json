{
  "name": "washtenaw-id-webapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@deque/cauldron-react": "^4.1.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.25",
    "@types/react": "^16.14.23",
    "@types/react-dom": "^16.9.14",
    "react": "^16.13.0",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "^16.13.0",
    "react-scripts": "5.0.0",
    "serve": "^13.0.2",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@types/jest-when": "^3.5.0",
    "jest-when": "^3.5.1",
    "msw": "^0.38.1"
  },
  "scripts": {
    "start": "npm run start-fake-data",
    "start-fake-data": "REACT_APP_API=fake-data react-scripts start",
    "start-dev": "REACT_APP_API=localhost react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npx eslint src*"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "jest/valid-title": "off",
      "testing-library/no-render-in-setup": "off",
      "no-restricted-imports": [
        "error",
        {
          "patterns": [
            {
              "group": [
                "msw*"
              ],
              "message": "Do not import from msw in production code - it is a dev dependency and will cause issues"
            }
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.test.ts*",
          "**/mock-server/*"
        ],
        "rules": {
          "no-restricted-imports": [
            "off",
            "msw"
          ]
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.01%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
